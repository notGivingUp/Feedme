<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="avatar">
      <%= image_tag @user.avatar, :height => '100', :width => '100', class: "avatar"%>
      </div>
      <h1><%= @user.email %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <% @users.each do |user| %>
          <li>
            <%= image_tag user.avatar, :height => '100', :width => '100', class: "avatar"%>
            <%= link_to user.email, user %>
          </li>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>